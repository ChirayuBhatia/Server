<script>
  function addMedicine() {
    // Clone the medicine template and append it to the medicine section
    var template = document.getElementById("medicineTemplate").cloneNode(true);
    template.style.display = "block";
    document.getElementById("medicineSection").appendChild(template);
  }
</script>
