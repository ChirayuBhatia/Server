  <h2 class="mb-4">Prescription Form</h2>
<form action="/Medicine" method="post" style="display: flex; flex-direction: column; gap: 10px;">
  <input type="text" class="form-control" name="patientName" placeholder="Enter Patient's Name (e.g., Abhay)" required>
  <input type="text" class="form-control" name="age" placeholder="Enter Age (e.g., 40 years)" required>
  <input type="text" class="form-control" name="sex" placeholder="Enter Sex (e.g., Male)" required>
  <input type="text" class="form-control" name="healthID" placeholder="Enter Health ID (e.g., 3457865)" required>
  <input type="text" class="form-control" name="consultationDate" placeholder="Enter Consultation Date (e.g., 24/12/2023, 10:45am)" required>
  <textarea class="form-control" name="chiefComplaints" rows="3" placeholder="Enter Chief Presenting Complaints" required></textarea>
  <textarea class="form-control" name="associatedComplaints" rows="3" placeholder="Enter Associated Complaints"></textarea>
  <textarea class="form-control" name="pastIllness" rows="3" placeholder="Enter History of Past Illness"></textarea>
  <textarea class="form-control" name="labInvestigations" rows="3" placeholder="Enter Lab Investigations"></textarea>
  <input type="text" class="form-control" name="medicineName" placeholder="Enter Name of Medicine" required>
  <input type="text" class="form-control" name="quantity" placeholder="Enter Quantity of Medicine" required>
  <input type="text" class="form-control" name="consumption" placeholder="Enter Consumption of Medicine" required>
  <input type="text" class="form-control" name="signature" placeholder="Enter Digital Signature" required>
  <button class="btn btn-primary">submit</button>
</form>



